{{!< default}}

<div class="wrap {{post_class}}">
    <section class="blog-content">

        <article>
        {{#post}}

            {{! If post is featured and has an image, make a big hero banner }}
            {{#if image}}{{#if featured}}
            <div class="hero">
                <div class="hero-image" style="background-image: url({{image}});"></div>
            </div>
            {{/if}}{{/if}}

            <a class="post-meta back-link" href="{{@blog.url}}">&larr; 返回</a>

            <h1 class="post-title">{{{title}}}</h1>
            <section class="post-meta">
                <img class="author-img" src="{{author.image}}" alt="作者图片" nopin="nopin" />
                <span class="author-name">{{author}}</span>
                于
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY年MM月DD日发布 "}}</time>
                <span class="tags">{{tags prefix="类别: "}}</span>
            </section>

            <section class="post-content">
                {{#if image}}{{#unless featured}}<img src="{{image}}" alt="文章图片" />{{/unless}}{{/if}}
                {{content}}
            </section>

            <footer class="post-footer">

                <section class="author">
                    <img class="author-img" src="{{author.image}}" alt="作者图片" nopin="nopin" />
                    <div class="author-meta">
                        <h4>{{author.name}}</h4>
                        <p>{{{author.bio}}} <a href="{{author.website}}">{{author.website}}</a></p>
                    </div>
                </section>

                <section class="read-next">
                    {{#next_post}}
                    <a class="read-next-story {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                        <section class="post">
                            <h2>{{title}}</h2>
                            <p>{{excerpt words="19"}}&hellip;</p>
                        </section>
                    </a>
                    {{/next_post}}
                </section>

                <a class="button-add large wide" data-toggle="modal" data-target="#blogsubscribe">订阅周报</a>

            </footer>

            <section class="comments">
                <div id="disqus_thread"></div>
                <script type="text/javascript">
                    var disqus_identifier = 'ghost-{{id}}';
                    (function() {
                        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();
                </script>
            </section>

        {{/post}}
        </article>

    </section>

    {{> sidebar}}

</div>
